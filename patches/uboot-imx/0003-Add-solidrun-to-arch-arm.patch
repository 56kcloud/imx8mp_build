+++ b/arch/arm/Kconfig
@@ -1822,6 +1822,7 @@ source "arch/arm/cpu/armv8/Kconfig"
 
 source "arch/arm/mach-imx/Kconfig"
 
+source "board/solidrun/imx8mp_solidrun/Kconfig"
 source "board/bosch/shc/Kconfig"
