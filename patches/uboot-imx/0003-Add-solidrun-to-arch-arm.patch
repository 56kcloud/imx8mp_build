index fb6dfe3355..db31605c17 100644
--- a/arch/arm/mach-imx/imx8m/Kconfig
+++ b/arch/arm/mach-imx/imx8m/Kconfig
@@ -24,6 +24,12 @@ config IMX8MP
 	bool
 	select IMX8M
 
+config TARGET_IMX8MP_SOLIDRUN
+	bool "SolidRun imx8mp based SOM"
+	select IMX8MP
+	select SUPPORT_SPL
+	select IMX8M_LPDDR4
+
 config SYS_SOC
 	default "imx8m"
 
